				jQuery('.col-left').css('display','block');
				jQuery('.filter-by').css('display','none');
			}
			jQuery(window).resize(function(){
				if (jQuery( window ).width() < 771){
				jQuery('.col-left').css('display','none');
				jQuery('.filter-by').css('display','block');	
				}else{
				jQuery('.col-left').css('display','block');
				jQuery('.filter-by').css('display','none');
				}
			});
