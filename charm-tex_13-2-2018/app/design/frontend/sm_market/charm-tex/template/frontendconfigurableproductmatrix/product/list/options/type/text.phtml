<?php $_productId = $this->getProduct()->getId();?>
<?php $_option = $this->getOption(); ?>
<table id="product-matrix-option-<?php echo $_option->getId();?>" class="product-matrix-option-list data-table">
	<thead>
        <tr>
            <th><label<?php if ($_option->getIsRequire()) echo ' class="required"' ?>><?php if ($_option->getIsRequire()) echo '<em>*</em>' ?><?php echo  $this->htmlEscape($_option->getTitle()) ?></label>
    <?php echo $this->getFormatedPrice() ?>
    	</th>
       </tr>
     </thead>
     <tbody>
		<tr <?php if ($_option->decoratedIsLast){?> class="last"<?php }?>>
			<td>
                <div class="input-box">
                <?php if ($_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_FIELD): ?>
                    <input type="text" id="configqty_<?php echo $productId;?>_options_<?php echo $_option->getId() ?>_text" class="input-text<?php echo $_option->getIsRequire() ? ' required-entry' : '' ?> <?php echo $_option->getMaxCharacters() ? ' validate-length maximum-length-'.$_option->getMaxCharacters() : '' ?> product-custom-option" name="configqty[<?php echo $_productId?>][options][<?php echo $_option->getId() ?>]" value="<?php echo $this->escapeHtml($this->getDefaultValue()) ?>" />
                <?php elseif ($_option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_AREA): ?>
                    <textarea id="configqty_<?php echo $_productId;?>_options_<?php echo $_option->getId() ?>_text" class="<?php echo $_option->getIsRequire() ? ' required-entry' : '' ?> <?php echo $_option->getMaxCharacters() ? ' validate-length maximum-length-'.$_option->getMaxCharacters() : '' ?> product-custom-option" name="configqty[<?php echo $_productId?>][options][<?php echo $_option->getId() ?>]" rows="5" cols="25"><?php echo $this->escapeHtml($this->getDefaultValue()) ?></textarea>
                <?php endif; ?>
                <?php if ($_option->getMaxCharacters()): ?>
                    <p class="note"><?php echo Mage::helper('catalog')->__('Maximum number of characters:')?> <strong><?php echo $_option->getMaxCharacters() ?></strong></p>
                <?php endif; ?>
                </div>
    		</td>
		</tr>		
	</tbody>
</table>
