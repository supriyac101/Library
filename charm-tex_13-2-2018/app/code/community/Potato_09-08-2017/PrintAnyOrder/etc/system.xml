<?xml version="1.0"?>
<config>
    <sections>
        <po_pao translate="label" module="po_pao">
            <label>Print Any Order</label>
            <tab>po_core</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <text_align translate="label comment">
                            <label>Text align</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>po_pao/source_textAlign</source_model>
                        </text_align>
                        <font translate="label comment">
                            <label>Add new font</label>
                            <frontend_type>file</frontend_type>
                            <backend_model>po_pao/source_file</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_model>po_pao/adminhtml_system_config_form_field_file</frontend_model>
                            <comment>Allowed file types: ttf.</comment>
                        </font>
                        <regular_font translate="label">
                            <label>Regular font</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>po_pao/source_font</source_model>
                            <sort_order>30</sort_order>
                        </regular_font>
                        <bold_font translate="label">
                            <label>Bold font</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>po_pao/source_font</source_model>
                            <sort_order>40</sort_order>
                        </bold_font>
                        <italic_font translate="label">
                            <label>Italic font</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>po_pao/source_font</source_model>
                            <sort_order>50</sort_order>
                        </italic_font>
                    </fields>
                </general>
            </groups>
        </po_pao>
    </sections>
</config>