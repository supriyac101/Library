<?xml version="1.0"?>
<config>
    <modules>
        <Webskitters_Creditsave>
            <version>0.1.0</version>
        </Webskitters_Creditsave>
    </modules>
    <frontend>
        <routers>
            <creditsave>
                <use>standard</use>
                <args>
                    <module>Webskitters_Creditsave</module>
                    <frontName>creditsave</frontName>
                </args>
            </creditsave>
        </routers>
        <layout>
            <updates>
                <creditsave>
                    <file>creditsave.xml</file>
                </creditsave>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<creditsave>
				<use>admin</use>
				<args>
					<module>Webskitters_Creditsave</module>
					<frontName>creditsave</frontName>
				</args>
			</creditsave>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<creditsave module="creditsave">
				<title>Creditsave</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="creditsave">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>creditsave/adminhtml_creditsave</action>
					</items>
				</children>
			</creditsave>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Webskitters_Creditsave>
							<title>Creditsave Module</title>
							<sort_order>10</sort_order>
						</Webskitters_Creditsave>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<creditsave>
					<file>creditsave.xml</file>
				</creditsave>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <creditsave>
                <class>Webskitters_Creditsave_Model</class>
                <resourceModel>creditsave_mysql4</resourceModel>
            </creditsave>
            <creditsave_mysql4>
                <class>Webskitters_Creditsave_Model_Mysql4</class>
                <entities>
                    <creditsave>
                        <table>creditsave</table>
                    </creditsave>
                </entities>
            </creditsave_mysql4>
        </models>
        <resources>
            <creditsave_setup>
                <setup>
                    <module>Webskitters_Creditsave</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </creditsave_setup>
            <creditsave_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </creditsave_write>
            <creditsave_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </creditsave_read>
        </resources>
        <blocks>
            <creditsave>
                <class>Webskitters_Creditsave_Block</class>
            </creditsave>
        </blocks>
        <helpers>
            <creditsave>
                <class>Webskitters_Creditsave_Helper</class>
            </creditsave>
        </helpers>
    </global>
</config>